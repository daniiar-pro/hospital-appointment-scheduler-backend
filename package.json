{
  "name": "hospital-appointment-scheduler",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
 "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",

    "db:create": "tsx ./src/database/create-db.ts",
    "db:migrate": "tsx ./src/database/migrate/migrate.ts",
    "db:seed:admin": "tsx ./src/database/seed-admin.ts",
    "db:drop": "tsx ./src/database/drop-db.ts",
    "db:reset:local": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed:admin",

    "docker:up": "docker compose up -d --build",
    "docker:logs": "docker compose logs -f api",
    "docker:down": "docker compose down -v",

    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage --coverageReporters=text-summary",
    "coverage:open": "open-cli coverage/lcov-report/index.html",

    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",

    "smoke": "tsx ./src/smoke.ts",

    "smoke:docker": "docker compose exec api node dist/smoke.js",
    "warp:docker": "docker compose exec -e WARP_MINUTES_AHEAD=1442 api node dist/dev/warp-latest-appointment.js",
    "reminders:run:docker": "docker compose exec -e REMINDER_WINDOW_MINUTES=5 -e MAIL_MODE=console api node dist/scheduler/run-reminders-24h.js",
    "reminders:run:service": "docker compose run --rm -e REMINDER_WINDOW_MINUTES=5 -e MAIL_MODE=console reminders",
    "demo:reminder:docker": "npm run smoke:docker && npm run warp:docker && npm run reminders:run:docker"
  },
  "keywords": [],
  "author": "Daniiar Abdraiymov",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "open-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
